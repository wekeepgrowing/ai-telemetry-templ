# Server configuration
PORT=3000
NODE_ENV=development

# OpenAI API configuration
OPENAI_API_KEY="your_openai_key_here"
OPENAI_MODEL="gpt-4o" # Default model
CONTEXT_SIZE="128000"
# OPENAI_ENDPOINT="http://localhost:11434/v1" # Optional custom endpoint for OpenAI-compatible APIs

# Langfuse telemetry configuration
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_SECRET_KEY=""
# LANGFUSE_BASEURL="https://cloud.langfuse.com" # Optional custom endpoint
ENABLE_TELEMETRY="true" # Set to false to disable telemetry

# Logging configuration
LOG_LEVEL="info" # One of: error, warn, info, http, debug, trace
ENABLE_FILE_LOGGING="false" # Set to true to enable file logging
# LOG_DIR="logs" # Directory to store log files
# LOG_MAX_SIZE="20m" # Maximum log file size before rotation
# LOG_MAX_FILES="14d" # Maximum retention period for log files